{% extends 'SecretariaBundle:Default:layout.html.twig' %}
{% block body %}
<div class="row">
        <div class="col-md-6">
        
        {{ form_start(form, { 'attr' : { 'novalidate': 'novalidate'} }) }}
        
        
        	  <div class="form-group">
			    {{ form_label(form.nombre_escala) }}
			    {{ form_widget(form.nombre_escala, { 'attr' : {'class' : 'form-control' } } ) }}
			    <span class="text-danger"> {{ form_errors(form.nombre_escala) }} </span>
			  </div>
			  
			  <div class="form-group">
			    {{ form_label(form.abreviatura) }}
			    {{ form_widget(form.abreviatura, { 'attr' : {'class' : 'form-control' } } ) }}
			    <span class="text-danger"> {{ form_errors(form.abreviatura) }} </span>
			  </div>  

        {{ form_end(form) }}
        </div>       
 </div>
 {% endblock %}